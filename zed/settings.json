{
  "title_bar": {
    "show_branch_icon": false
  },
  "auto_update": false,
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "model_parameters": []
  },
  "terminal": {
    "font_size": 15.0,
    "font_family": "JetBrainsMono Nerd Font Mono",
    "line_height": {
      "custom": 1.25
    },
    "cursor_shape": "block",
    "blinking": "on",
    "copy_on_select": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "project_panel": {
    "auto_fold_dirs": false
  },
  "preview_tabs": {
    "enabled": false,
    "enable_preview_from_file_finder": false
  },
  "tabs": {
    "activate_on_close": "left_neighbour"
  },
  "git_panel": {
    "button": true
  },
  "multi_cursor_modifier": "cmd_or_ctrl",
  "use_smartcase_search": true,
  "scroll_beyond_last_line": "one_page",
  "minimap": {
    "show": "never"
  },
  "hover_popover_enabled": true,
  "rounded_selection": false,
  "current_line_highlight": "all",
  "cursor_blink": true,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "file_types": {},
  "auto_indent_on_paste": false,
  "use_on_type_format": true,
  "show_whitespaces": "all",
  "ensure_final_newline_on_save": true,
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware",
    "background_coloring": "indent_aware"
  },
  "experimental.theme_overrides": {
    // ステータスバー
    "status_bar.background": "#004674",
    // エディタ文字色
    "editor.foreground": "#d4d4d4",
    "syntax": {
      // 基本文字色
      "string": { "color": "#ce9178" },
      // コメント
      "comment": { "color": "#999999" }
    },
    // インデントカラー
    "accents": [
      "rgba(153, 40, 57, 0.24)",
      "rgba(111, 115, 30, 0.24)",
      "rgba(30, 115, 102, 0.24)",
      "rgba(85, 30, 115, 0.24)"
    ]
  },
  "wrap_guides": [0],
  "soft_wrap": "none",
  "hard_tabs": false,
  "tab_size": 2,
  "base_keymap": "VSCode",
  "icon_theme": "Material Icon Theme",
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "GitHub Dark Default"
  },
  "languages": {
    "PHP": {
      "language_servers": ["intelephense", "!phpactor", "..."]
    }
  },
  "features": {
    "edit_prediction_provider": "copilot"
  }
}
